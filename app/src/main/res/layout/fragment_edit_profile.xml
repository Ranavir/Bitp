                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/register_text_size2"
                    android:inputType="text"/>

            </LinearLayout>
